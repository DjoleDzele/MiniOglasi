        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RacunarOglas.ValutaId, htmlAttributes: new { @class = "control-label " })
            <div>
                @Html.DropDownListFor(model => model.RacunarOglas.ValutaId, new SelectList(Model.Valute, "Id", "ImeValute"), new { @class = "form-control" })
