@model MiniOglasi.ViewModels.RacunarOglasViewModel

@{
    ViewBag.Title = Model.RacunarOglas.Id == 0 ? "Novi oglas za racunar" : "Izmeni oglas za racunar";
}

<h3 class="naslov">@ViewBag.Title</h3>

@if (ViewBag.Greska != null)
{
    <span class="text-danger field-validation-error">
        <span>@ViewBag.Greska</span>
    </span>
}

@using (Html.BeginForm("SaveOglas",
                       "RacunariOglasi",
                       FormMethod.Post,
                       new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RacunarOglas.NaslovOglasa, htmlAttributes: new { @class = "control-label " })
            <div>
                @Html.EditorFor(model => model.RacunarOglas.NaslovOglasa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RacunarOglas.NaslovOglasa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RacunarOglas.OpisOglasa, htmlAttributes: new { @class = "control-label " })
