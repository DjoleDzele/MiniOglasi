@model IEnumerable<MiniOglasi.Models.Oglas>

@using MiniOglasi.Models
@using MiniOglasi.Models.RacunarOglasModels
@using MiniOglasi.Models.NekretninaOglasModels

<h2>@ViewBag.Title</h2>

@foreach (var item in Model)
{
    string pathDoSlike = "";

    if (item.Slike != null && item.Slike.Any())
    {
        pathDoSlike = Url.Content(item.Slike.ElementAt(0).PathDoSlike);
    }
    else
    {
        pathDoSlike = Url.Content(PomocnaKlasa.PlaceholderSlika);
    }

    string linkDoOglasa = string.Empty;

    if (item is AutoOglas)
    {
        linkDoOglasa = Url.Action("Details", "AutoOglasi", new { id = item.Id });
    }
    else if (item is RacunarOglas)
    {
        linkDoOglasa = Url.Action("Details", "RacunariOglasi", new { id = item.Id });
    }
    else if (item is NekretninaOglas)
    {
        linkDoOglasa = Url.Action("Details", "NekretnineOglasi", new { id = item.Id });
    }

    <div class="oglas-okvir">
        <a href="@linkDoOglasa">
            <div class="oglas-list-item">
                <div class="slika-oglasa" style="background-image: url(@pathDoSlike);">
                </div>
                <div class="main-info-oglasa">
                    <p>
                        <strong>@Html.DisplayNameFor(oglas => oglas.NaslovOglasa): </strong>
                        <span>@Html.DisplayFor(oglas => item.NaslovOglasa)</span>
                    </p>
                    <p>
                        <strong>@Html.DisplayNameFor(oglas => oglas.Cena): </strong>
                        <span>@Html.DisplayFor(oglas => item.Cena)</span>
                    </p>
                    <p>
                        <strong>@Html.DisplayNameFor(oglas => oglas.DatumPostavljanja): </strong>
                        <span>@item.DatumPostavljanja.ToShortDateString()</span>
                    </p>
                    @*@if (item is AutoOglas)
                        {
                            <p>@typeof(AutoOglas).GetProperty("Godiste").GetValue(item)</p>
                        }*@
                </div>
            </div>
        </a>
    </div>
}